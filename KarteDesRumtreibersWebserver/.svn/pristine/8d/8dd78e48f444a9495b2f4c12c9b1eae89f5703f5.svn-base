create schema IF NOT EXISTS Magellan  AUTHORIZATION sa;
create schema IF NOT EXISTS pms AUTHORIZATION sa;
create schema IF NOT EXISTS data_log AUTHORIZATION sa;

drop table IF EXISTS data_log.data_changes;

create table data_log.data_changes (
        dc_id integer generated by default as identity,
        dc_application_name varchar(255),
        dc_cu_id integer,
        dc_date_inserted timestamp,
        dc_dv_type smallint,
        dc_foreign_id integer,
        dc_label varchar(255),
        dc_new_value clob,
        dc_node_id integer,
        dc_old_value clob,
        dc_reason varchar(255),
        dc_record_id integer,
        dc_us_id_inserted integer,
        primary key (dc_id)
    );
